.card.shadow.mb-4
  .card-body
    .mb-4
      .d-flex.align-items-center.justify-content-between
        .d-flex.align-items-center
          = render 'shared/sb-admin/filter_search', placeholder: t('tickets.index.type_code'), url: tickets_path

        .actions
          = link_to "#", class: "btn btn-primary btn-sm", data: { toggle: "modal", target: "#newTicketModal" } do
            %i.fas.fa-plus.fa-fw
            = t('.new_ticket')
          = render "create-new-ticket-modal", ticket: Ticket.new

    .table-responsive
      %table#dataTable.table.table-bordered.w-100{:cellspacing => "0"}
        %thead
          %tr
            %th= t('tickets.code')
            %th= t('tickets.status')
            %th= t('tickets.tell')
            %th= t('tickets.district')
            %th= t('tickets.service_description')
            %th= t('tickets.requested_date')
            %th= t('tickets.approved_date')
            %th= t('tickets.delivery_date')
        %tbody
          = render @tickets

- if @pagy.page > 1
  != render partial: 'shared/pagy/bootstrap_nav', locals: {pagy: @pagy}
