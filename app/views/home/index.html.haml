= render "page_heading", title: t(".title")

.card.shadow.mb-4
  .card-body
    = render "dashboard/filter_options"

    .d-flex.justify-content-between
      %p
        = t("paginate_info_html", name: t(".messages"), items_count: @pagy.items, collection_count: @collection.count)
      -# = render "date_range"

    .table-responsive
      %table#dataTable.table{:cellspacing => "0", :width => "100%"}
        %thead
          %tr
            %th
              = t(".session_id")
            %th
              = t(".source")
            %th.nowrap-space
              = t(".last_interaction_date")
        %tbody
          - @messages.each_with_index do |message, index|
            = render partial: "message", object: message, locals: { index: index }

    - if @pagy.pages > 1
      != render partial: 'shared/pagy/bootstrap_nav', locals: {pagy: @pagy}
