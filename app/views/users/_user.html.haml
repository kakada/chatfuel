%tr
  %td= user_counter + 1 
  %td= user.email
  %td
    %span.p-2.badge.badge-pill.badge-primary
      = user.role_name
  %td
    %ul.list-inline
      %li.list-inline-item 
        = link_to user_path(user), class: "btn-circle btn-sm btn-warning text-decoration-none", data: { toggle: "modal", target: "#userModal" } do
          %i.fas.fa-edit.fa-fw
        = render "user-form-modal", user: user
      %li.list-inline-item 
        = link_to user_path(user), class: "btn-circle btn-sm btn-danger text-decoration-none" do
          %i.fas.fa-trash.fa-fw
