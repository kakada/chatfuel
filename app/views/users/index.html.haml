= render "shared/sb-admin/page_heading", title: t(".users")

.card.shadow.mb-4
  .card-body
    .mb-4.d-flex.align-items-center
      = render 'shared/sb-admin/filter_search', placeholder: t('users.type_email'), url: users_path

    .table-responsive
      %table.table.table-bordered
        %tr
          %th= t(".no")
          %th= t(".email")
          %th= t(".role")
          %th= t(".status")
          %th{colspan: 2}= t(".action")
        = render @users

- if @pagy.pages > 1
  != render partial: 'shared/pagy/bootstrap_nav', locals: {pagy: @pagy}
