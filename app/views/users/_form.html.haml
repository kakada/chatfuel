= simple_form_for @user do |f|
  .row
    .col-md-3
      = f.input :role, as: :select, collection: policy(User).roles, value_method: :first
  = f.label :status, class: "mb-0"
  = f.input :status, as: :boolean, label: 'Enable', wrapper_html: { class: "mb-3" }
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  = f.submit