#tab
  .container
    .row
      .col-12
        #menuContent.tab-content.pt-5
          #summary.tab-pane.fade{"aria-labelledby" => "summary-tab", :role => "tabpanel", class: toggle_class_name("active show", (active_tab.blank? || active_tab == '#summary'))}
            = render "dashboard/earnings"
            .row
              .col-lg-6
                = render partial: "dashboard/total_user_visit", locals: { id: "chart_total_user_visit", title: t("dashboard.total_user_visit") }
              .col-lg-6
                = render partial: "dashboard/total_user_feedback", locals: { id: "total_summary_feedback", title: t("welcomes.total_user_feedback") }
              
          #access-information.tab-pane.fade{"aria-labelledby" => "access-information-tab", :role => "tabpanel", class: toggle_class_name("active show", active_tab == '#access-information')}
            = render "dashboard/earnings"
            .row
              -# Information Access
              = render partial: "dashboard/charts/most_requested_services", collection: @query.province_codes_without_other, as: :province_id

              .col-lg-6
                = render partial: "dashboard/gender", locals: { title: t("welcomes.feedback_by_gender"), id: "total_user_gender" }

              .col-lg-6
                = render( ChartComponent.new(name: t("welcomes.information_access_by"), filterable: true) ) do |c|
                  - c.with(:addon) do
                    %select.period-filter{ data: { resourcepath: "access-info", formater: "accessInfo", canvasid: "chart_information_access_by_period" }}
                      %option{ value: "month" }= t("period.monthly")
                      %option{ value: "quarter" }= t("period.quarterly")
                      %option{ value: "year" }= t("period.yearly")
                  - c.with(:body) { content_tag(:canvas, nil, id: "chart_information_access_by_period") }
                  - c.with(:hint) { t("hint.information_access_by_period") }

              .col-lg-6
                = render( ChartComponent.new(name: t("welcomes.number_access_by_main_services")) ) do |c|
                  - c.with(:body) { content_tag(:canvas, nil, id: "chart_number_access_by_main_services") }
                  - c.with(:hint) { t("hint.number_access_by_main_services") }

              .col-lg-6
                - name = t("welcomes.most_service_tracked_by_periodic")
                = render( ChartComponent.new(name: name, filterable: true) ) do |c|
                  - c.with(:addon) do
                    %select.period-filter{ data: { resourcepath: "service-tracked", formater: "mostServiceTracked", canvasid: "chart_most_service_tracked_periodically" }}
                      %option{ value: "month" }= t("period.monthly")
                      %option{ value: "quarter" }= t("period.quarterly")
                      %option{ value: "year" }= t("period.yearly")
                  - c.with(:hint) { t("hint.most_service_tracked_by_periodic") }
                  - c.with(:body) do
                    %canvas#chart_most_service_tracked_periodically

              .col-lg-6
                = render( ChartComponent.new(name: t("welcomes.ticket_tracking_by_gender")) ) do |c|
                  - c.with(:body) { content_tag(:canvas, nil, id: "chart_ticket_tracking_by_gender") }
                  - c.with(:hint) { t("hint.ticket_tracking_by_gender") }

          #citizen-feedback.tab-pane.fade{"aria-labelledby" => "citizen-feedback-tab", :role => "tabpanel", class: toggle_class_name("active show", active_tab == '#citizen-feedback')}
            = render "dashboard/earnings"
            .row
              -# citizen feedback
              .col-lg-6
                = render( ChartComponent.new(name: t("welcomes.information_access_by_gender")) ) do |c|
                  - c.with(:body) { content_tag(:canvas, nil, id: "gender_feedback") }
                  - c.with(:hint) { t("hint.information_access_by_gender") }

              .col-lg-6
                = render partial: "dashboard/total_user_feedback", locals: { id: "total_citizen_feedback", title: t("welcomes.overall_citizen_feedback") }

              = render partial: "dashboard/feedback_sub_categories", collection: @query.province_codes_without_other, as: :province_id

              .col-lg-6
                = render( ChartComponent.new(name: t("welcomes.owso_feedback_trend"), filterable: true) ) do |c|
                  - c.with(:addon) do
                    %select.period-filter{ data: { resourcepath: "feedback-trend", formater: "feedbackTrend", canvasid: "chart_owso_feedback_trend" }}
                      %option{ value: "month" }= t("period.monthly")
                      %option{ value: "quarter" }= t("period.quarterly")
                      %option{ value: "year" }= t("period.yearly")
                  - c.with(:body) { content_tag(:canvas, nil, id: "chart_owso_feedback_trend") }
                  - c.with(:hint) { t("hint.owso_feedback_trend") }
