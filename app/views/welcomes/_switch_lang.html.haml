.dropdown.position-fixed.switch-lang
  %a#dropdownMenuLink.btn.btn-light.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
    = t("language.#{I18n.locale}")

  .dropdown-menu{"aria-labelledby" => "dropdownMenuLink"}
    = link_to url_for(request.query_parameters.merge(locale: 'km')), class: 'dropdown-item' do
      = t('language.km')

    = link_to url_for(request.query_parameters.merge(locale: 'en')), class: 'dropdown-item' do
      = t('language.en')

  .visitor-counter.text-right
    %i.fa.fa-eye
    = Ahoy::Visit.count
