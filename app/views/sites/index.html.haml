.d-flex.justify-content-between.mb-3
  %h3 Sites
  = simple_form_for :site, url: import_sites_path, wrapper: :inline_form, html: { class: 'form-inline' } do |f|
    = f.input :file, as: :file, label: false
    = f.submit 'upload', class: 'btn btn-primary'
  = link_to 'Create new', new_site_path, class: 'btn btn-primary'

%table.table
  %tr
    %th Name
    %th Code
    %th Tracks count
    %th Detail
    %th{colspan: 2} Action
    - @sites.each do |site|
      %tr
        %td= site.name
        %td= site.code
        %td= site.tracks_count
        %td= link_to fa_icon('arrow-right'), site_path(site)
        %td= link_to fa_icon('pencil'), edit_site_path(site)
        %td= link_to fa_icon('trash'), site_path(site), method: :delete, data: { confirm: 'Are you sure?' }
!= pagy_bootstrap_nav(@pagy)
