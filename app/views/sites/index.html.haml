= render partial: "shared/page_header", locals: { title: "Sites", link: link_to_new('site') }
= simple_form_for :site, url: import_sites_path, wrapper: :inline_form, html: { class: 'form-inline mb-3 pull-right' } do |f|
  = f.input :file, as: :file, label: false
  = f.submit 'upload', class: 'btn btn-primary'

%table.table
  %tr
    %th Name
    %th Code
    %th Tracks count
    %th{colspan: 2} Action
    - @sites.each do |site|
      %tr
        %td= link_to site.name, site
        %td= site.code
        %td= site.tracks_count
        %td= link_to fa_icon('pencil'), edit_site_path(site)
        %td= link_to fa_icon('trash'), site_path(site), method: :delete, data: { confirm: 'Are you sure?' }
!= pagy_bootstrap_nav(@pagy)
