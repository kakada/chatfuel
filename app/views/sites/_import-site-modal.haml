#importSiteModal.modal.fade{"aria-hidden" => "true", "data-backdrop": "static", "aria-labelledby" => "importSiteLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered{:role => "document"}
    .modal-content
      = simple_form_for Site.new, url: import_sites_path, html: { id: "new_import_site" } do |f|
        .modal-header
          %h5#importSiteLabel.modal-title
            = t("sites.import")
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          .form-group
            %label.d-block
              = t("sites.file")
            %label.btn.btn-secondary.m-0
              = t("sites.choose_file")
              = f.input_field :file, as: :file, label: false, class: "d-none"

          .mt-4
            = link_to download_sites_path, target: "_blank" do
              %i.fas.fa-fw.fa-download
              = t("sites.download_template")
        .modal-footer
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}
            = t("shared.cancel")
          = f.submit t("sites.import"), class: "btn btn-primary"
