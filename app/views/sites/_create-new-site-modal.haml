  .modal-dialog.modal-dialog-centered{:role => "document"}
    .modal-content
      = simple_form_for site do |f|
        .modal-header
          %h5#newSiteLabel.modal-title
            = t("sites.create_new")
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          = f.input :name
          = f.input :code
          = f.input :lat
          = f.input :lng
          = f.input :status, as: :boolean
        .modal-footer
          %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}
            = t("cancel")
          = f.submit t("sites.save_changes"), class: "btn btn-primary"
