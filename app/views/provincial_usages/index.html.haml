= render "shared/sb-admin/page_heading", title: t("sidebar.provincial_usages")

.card.shadow.mb-4
  .card-body
    = render "download"
    = render "dashboard/filter_options"

    #table.table-responsive
      %table.table.table-hover
        %thead
          %tr
            - @provincial_usages.t_headers.each do |h|
              %th{:scope => "col"}
                = h[:value]
                %span.sort
                  = link_to sort_url_for(h[:key], 'asc'), class: ['lh-sm', active_sort(h[:key], 'asc')] do
                    %i.fa.fa-caret-up.lh-sm
                  = link_to sort_url_for(h[:key], 'desc'), class: ['lh-sm', active_sort(h[:key], 'desc')] do
                    %i.fa.fa-caret-down.lh-sm
          %tr.total-row
            %td.font-weight-bold
              = t("provincial_usages.total")
            %td &nbsp;
            %td.font-weight-bold
              = @provincial_usages.sum_total_visit
            %td.font-weight-bold
              = @provincial_usages.sum_unique_users_count
            %td.font-weight-bold
              = @provincial_usages.sum_service_delivered_count
            %td &nbsp;
        %tbody
          - @provincial_usages.each do |p, index|
            %tr
              %th{:scope => "row"}
                = p.code
              - p.data.each do |d|
                %td= d
