.row
  .col-xl-6.col-lg-5
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        .h5.m-0.font-weight-bold.text-primary
          = t("dashboard.total_user_visit")
      .card-body
        .chart-pie.pt-4.pb-2
          = pie_chart total_users_visit_each_functions, donut: true, legend: false, messages: { empty: "no data" }, library: { cutoutPercentage: 80 }

  .col-xl-6.col-lg-5
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        .h5.m-0.font-weight-bold.text-primary
          = t("dashboard.total_user_feedback")
      .card-body
        .chart-pie.pt-4.pb-2
          = pie_chart total_users_feedback, donut: true, legend: false, messages: { empty: "no data" }, library: { cutoutPercentage: 80 }

  .col-xl-6.col-lg-5
    .card.shadow.mb-4
      .card-header.py-3
        .h5.m-0.font-weight-bold.text-primary
          = t("dashboard.number_of_tracked_ticket")
      .card-body
        .chart-bar
          = column_chart number_of_tracking_tickets
