.row
  .col-xl-6.col-lg-5
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        .h5.m-0.font-weight-bold.text-primary
          = t("dashboard.total_user_visit")
          = link_to "#", data: { toggle: "modal", target: "#mostRequest", id: @user_visit_variable&.id, name: "variable[attributes][][is_user_visit]", url: set_user_visit_dictionaries_path } do
            %i.fas.fa-cog.cog
      .card-body
        .pt-4.pb-2.d-flex.justify-content-around.align-items-center
          - if @user_visit_variable.present?
            %ul.list-unstyled
              - @user_visit_variable.values.each_with_index do |value, index|
                %li
                  %span.oval{ style: "background-color: #{chartjs_colors[index]}" }
                  %span.oval-label
                    = value.raw_value

          = pie_chart total_users_visit_each_functions, colors: @user_visit_variable && chartjs_colors.take(@user_visit_variable.values.count), width: "200px", height: "200px", donut: true, legend: false, messages: { empty: t("no_data") }, library: { cutoutPercentage: 80 }

  .col-xl-6.col-lg-5
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        .h5.m-0.font-weight-bold.text-primary
          = t("dashboard.total_user_feedback", name: @report_enabled_variable&.name)
      .card-body
        .pt-4.pb-2.d-flex.justify-content-around.align-items-center
          - if @report_enabled_variable.present?
            %ul.list-unstyled
              %li
                %span.oval.oval--green
                %span.oval-emoji üòç
                %span.oval-label-km
                  = t("dashboard.like")
              %li
                %span.oval.oval--blue
                %span.oval-emoji üòä
                %span.oval-label-km
                  = t("dashboard.acceptable")
              %li
                %span.oval.oval--yellow
                %span.oval-emoji üòû
                %span.oval-label-km
                  = t("dashboard.dislike")

          = pie_chart total_users_feedback, colors: ['#4e73df', '#1cc88a', '#f63e3e'], width: "200px", height: "200px", donut: true, legend: false, messages: { empty: t("no_data") }, library: { cutoutPercentage: 80 }

  .col-xl-6.col-lg-5
    .card.shadow.mb-4
      .card-header.py-3
        .h5.m-0.font-weight-bold.text-primary
          = t("dashboard.number_of_tracked_ticket")
      .card-body
        = column_chart number_of_tracking_tickets, library: { scales: { xAxes: [{ maxBarThickness: 50 }] } }, messages: { empty: t("no_data") }

  .col-xl-6.col-lg-5
    .card.shadow.mb-4
      .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
        .h5.m-0.font-weight-bold.text-primary
          = t("dashboard.overview")
      .card-body
        .pt-4.pb-2.d-flex.justify-content-around.align-items-center
          = line_chart @goals.map { |goal| { name: goal[:name], data: goal[:data] } }, height: "250px"

