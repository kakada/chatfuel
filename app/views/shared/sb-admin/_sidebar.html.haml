#accordionSidebar.navbar-nav.bg-gradient-primary.sidebar.sidebar-dark.accordion
  = link_to root_path, class: "sidebar-brand d-flex align-items-center justify-content-center" do
    .sidebar-brand-text1.mx-3
      OWSO

  %hr.sidebar-divider.my-0
  %ul.list-unstyled.list-items
    %li.nav-item{ class: css_active_class('dashboard') }
      = link_to dashboard_path, class: "nav-link" do
        %i.fas.fa-fw.fa-tachometer-alt
        %span= t('sidebar.dashboard')
    %li.nav-item{ class: css_active_class('home') }
      = link_to home_path, class: "nav-link" do
        %i.fas.fa-fw.fa-home
        %span= t('sidebar.home')
    %li.nav-item{ class: css_active_class('sites') }
      = link_to sites_path, class: "nav-link" do
        %i.fas.fa-fw.fa-sitemap
        %span= t('sidebar.sites')
    %li.nav-item{ class: css_active_class('dictionaries') }
      = link_to dictionaries_path, class: "nav-link" do
        %i.fas.fa-fw.fa-book
        %span= t('sidebar.dictionaries')
    - if policy(User).index?
      %li.nav-item{ class: css_active_class('users') }
        = link_to users_path, class: "nav-link" do
          %i.fas.fa-fw.fa-user
          %span= t('sidebar.users')
    %li.nav-item{ class: css_active_class('tickets') }
      = link_to tickets_path, class: "nav-link" do
        %i.fas.fa-fw.fa-envelope
        %span= t('sidebar.tickets')
    %li.nav-item{ class: css_active_class('templates') }
      = link_to templates_path, class: "nav-link" do
        %i.fas.fa-fw.fa-file-alt
        %span= t('sidebar.templates')

    - if policy(:admin).show?
      %li.nav-item{ class: css_active_class('settings') }
        = link_to settings_path, class: "nav-link" do
          %i.fas.fa-fw.fa-wrench
          %span= t('sidebar.setting')

  .text-center.d-none.d-md-inline.mb-auto
    %button#sidebarToggle.rounded-circle.border-0

  .sidebar-footer
    %small.text-white= t("app_version", version: ENV['APP_VERSION'])
