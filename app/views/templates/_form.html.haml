= simple_form_for @template do |f|
  = f.input :platform_name, as: :select, collection: ::Template.platform_names, selected: @template.platform_value
  = f.input :status, as: :radio_buttons, collection: ::Template.statuses, label_method: lambda{ |t| t.first.capitalize }, checked: @template.status_value
  = f.input :audio, as: :file, value: @template&.audio.try(:signed_id)
  = f.input :content
  = f.submit