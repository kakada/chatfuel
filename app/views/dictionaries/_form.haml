= simple_form_for dictionary, url: dictionaries_path, remote: true do |f|
  .modal-header
    %h5#newDictionaryLabel.modal-title= t('dictionaries.new_dictionary')
    %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
      %span{"aria-hidden" => "true"} Ã—
  .modal-body
    = f.input :name, input_html: { name: "variable[name]" }, label: t('dictionaries.name')

    .form-group
      %label= t('dictionaries.permission')
      .d-flex.mb-4
        = hidden_field_tag('variable[role_ids][]', nil)
        - @roles.each do |role|
          .d-flex.flex-column.align-items-center.mr-5{for: role.id}
            %label.mb-0{for: role.id}= role_icon(role.name).html_safe
            %label{for: role.id}= role.name.humanize
            %input{:type => "checkbox", :value => role.id, id: role.id, name: 'variable[role_ids][]', checked: dictionary.role_ids.include?(role.id)}

    .align-items-center.mb-4
      .d-flex
        %label.switch.m-0
          = f.input_field :marks_as, as: :boolean, label: false, name: "variable[marks_as][report]"
          %span.slider.round
        %span.ml-1= t('dictionaries.marked_as.feedback')
      %div.invalid-message
        = dictionary.errors.full_messages_for(:report).to_sentence

    .align-items-center.mb-4
      .d-flex
        %label.switch.m-0
          = f.input_field :marks_as, as: :boolean, label: false, name: "variable[marks_as][location]"
          %span.slider.round
        %span.ml-1= t('dictionaries.marked_as.location')
      %div.invalid-message
        = dictionary.errors.full_messages_for(:location).to_sentence

    .align-items-center
      .d-flex
        %label.switch.m-0
          = f.input_field :marks_as, as: :boolean, label: false, name: "variable[marks_as][feedback_location]", checked: @variable.feedback_location?
          %span.slider.round
        %span.ml-1= t('dictionaries.marked_as.feedback_location')
      %div.invalid-message
        = @variable.errors.full_messages_for(:feedback_location).to_sentence

  .modal-footer
    %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"}= t('shared.cancel')
    = f.submit t('shared.save'), class: "btn btn-primary"
