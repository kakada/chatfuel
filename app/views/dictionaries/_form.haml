= simple_form_for dictionary, url: dictionaries_path, remote: true do |f|
  .modal-header
    %h5#newDictionaryLabel.modal-title New Dictionary
    %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
      %span{"aria-hidden" => "true"} Ã—
  .modal-body
    = f.input :type, as: :select, collection: { "BothVariable": "Both", "TextVariable": "Text", "VoiceVariable": "Voice" }, value_method: :first, label_method: :second, selected: 1, input_html: { name: "variable[type]" }
    = f.input :name, input_html: { name: "variable[name]" }

    .form-group
      %label Permission
      .d-flex.mb-4
        = hidden_field_tag('variable[role_ids][]', nil)
        - @roles.each do |role|
          .d-flex.flex-column.align-items-center.mr-5{for: role.id}
            %label.mb-0{for: role.id}= role_icon(role.name).html_safe
            %label{for: role.id}= role.name.humanize
            %input{:type => "checkbox", :value => role.id, id: role.id, name: 'variable[role_ids][]', checked: dictionary.role_ids.include?(role.id)}

    .d-flex.align-items-center.mb-2
      %label.switch.m-0
        = f.input_field :report_enabled, label: false, name: "variable[report_enabled]"
        %span.slider.round
      %span.ml-1 Report enabled
    %div.invalid-message
      = dictionary.errors.full_messages_for(:report_enabled).to_sentence

    .d-flex.align-items-center
      %label.switch.m-0
        = f.input_field :is_location, label: false, name: 'variable[is_location]'
        %span.slider.round
      %span.ml-1 Mark as location

  .modal-footer
    %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
    = f.submit "Save changes", class: "btn btn-primary"
