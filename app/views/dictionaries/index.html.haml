= render "shared/sb-admin/page_heading", title: t("dictionaries.dictionaries")

.card.shadow.mb-4
  .card-body
    .mb-4
      .d-flex.align-items-center.justify-content-between
        .d-flex.align-items-center
          = render 'shared/sb-admin/filter_search', placeholder: t('dictionaries.type_name'), url: dictionaries_path

        .actions
          = link_to "#", class: "btn btn-primary", data: { toggle: "modal", target: "#newDictionaryModal" } do
            %i.fas.fa-plus.fa-fw
            = t('dictionaries.new_dictionary')

          = render "create-new-dictionary-modal", dictionary: @variable

    .total-info.mb-2
      = t("paginate_info_html", name: t("dictionaries.dictionaries"), items_count: @pagy.items, collection_count: @pagy.count)

    .table-responsive
      %table#dataTable.table.table-bordered.w-100
        %thead
          %tr
            %th #
            %th= t('dictionaries.name')
            %th= t('dictionaries.permission')
            %th= t('dictionaries.mark_as_feedback')
            %th= t('dictionaries.mark_as_site_location')
            %th= t('dictionaries.created_at')
            %th= t('dictionaries.action')
        %tbody
          = render @variables

    - if @pagy.pages > 1
      != render partial: 'shared/pagy/bootstrap_nav', locals: {pagy: @pagy}
