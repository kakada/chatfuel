%tr.value-row
  %td= f.input :raw_value, label: false
  %td= f.input :mapping_value, label: false
  %td
    .td-satisfied{ class: toggle_class_name("invisible", !@variable.report_enabled?) }
      = f.input :id, as: :hidden
      = f.input :_destroy, as: :hidden, input_html: { class: "variable-destroy" }

      %table.w-75.rate{cellspacing: 0, cellpadding: 0}
        %tr
          %td 😍
          %td 😊
          %td 😞
        %tr
          %td= f.radio_button :status, 0, checked: f.object.satisfied?
          %td= f.radio_button :status, 1, checked: f.object.normal?
          %td= f.radio_button :status, 2, checked: f.object.disatisfied?

  %td.text-right
    = link_to "#", class: "btn-circle btn-sm btn-danger text-decoration-none dictionary-remove-pair" do
      %i.fa.fa-fw.fa-trash
