%tr.value-row
  %td= f.input :raw_value, label: false
  %td= f.input :mapping_value, label: false
  %td
    - button_style = f.object.hint.present? ? 'btn-outline-primary' : 'btn-outline-secondary'
    = link_to "#", data: { target: "#confirmModal#{f.object.id}", toggle: "modal", title: f.object.hint }, class: "btn btn-circle btn-sm #{button_style} mt-1 text-decoration-none" do
      %i.fas.fa-pen.fa-fw
    = render "hint_modal", item_id: f.object.id, destroy_url: root_path, f: f
  %td
    .td-satisfied{ class: toggle_class_name("invisible", !@variable.report_enabled?) }
      = f.input :id, as: :hidden
      - if f.object.destroyable?
        = f.input :_destroy, as: :hidden, input_html: { class: "variable-destroy" }

      %table.w-75.rate{cellspacing: 0, cellpadding: 0}
        %tr
          %td 😍
          %td 😊
          %td 😞
        %tr
          %td= f.radio_button :status, 0, checked: f.object.like?
          %td= f.radio_button :status, 1, checked: f.object.acceptable?
          %td= f.radio_button :status, 2, checked: f.object.dislike?

  %td.text-right
    - if f.object.destroyable?
      = link_to "#", class: "btn-circle btn-sm btn-danger text-decoration-none dictionary-remove-pair" do
        %i.fa.fa-fw.fa-trash
