= simple_form_for @variable, as: :variable, url: dictionary_path do |f|
  .d-sm-flex.align-items-center.justify-content-between.mb-4
    %h1.h3.mb-0.text-gray-800
      = @variable.name

    .btn-group-toggle.text-right{ "data-toggle": "buttons" }
      %label.d-none.variable_report.btn.btn-success{ class: toggle_class_name("active", @variable.report?) }
        = f.input_field :mark_as, as: :boolean, checked: @variable.report?, name: "variable[report]", id: "variable_report", class: "variable-report-enabled"
        %span.report-label
          = @variable.report? ? t('dictionaries.unmark_as_feedback') : t('dictionaries.mark_as_feedback')
      %div.invalid-message
        %small= @variable.errors.full_messages_for(:report).to_sentence

  .card.shadow.mb-4
    .card-body
      .my-4
        .table-responsive
          %table.w-100.table{ cellspacing: 0 }
            %thead
              %tr
                %th= t('dictionaries.raw_value')
                %th= t('dictionaries.mapping_value_en')
                %th= t('dictionaries.mapping_value_km')
                %th= t('dictionaries.hint')
                %th.w-25.px-4
                  .td-satisfied{ class: toggle_class_name("invisible", !@variable.report?) }= t('dictionaries.satisfied')

                %th
            %tbody
              = f.simple_fields_for :values, @variable.values.reorder(:raw_value), include_id: false do |builder|
                = render "value_fields", f: builder

              %tr
                %td{ colspan: 6 }
                  - title = "<i class='fa fa-sm fa-plus-circle fa-fw'></i> Add pair"
                  = link_to_add_fields(title, f, :values)

        %h6.mt-4.permission-title= t('dictionaries.permission')
        .d-flex.mb-4
          = hidden_field_tag('variable[role_ids][]', nil)
          - @roles.each do |role|
            .d-flex.flex-column.align-items-center.mr-5{for: role.id}
              %label.mb-0{for: role.id}= role_icon(role.name).html_safe
              %label{for: role.id}= role.name.humanize
              %input{:type => "checkbox", :value => role.id, id: role.id, name: 'variable[role_ids][]', checked: f.object.role_ids.include?(role.id)}

        %h6.mt-4.permission-title= t('dictionaries.mark_as')
        .form-group
          .my-4
            %label.item.text-center{ data: { toggle: "tooltip", title: (Variable.report && Variable.report.id != @variable.id) ? t("dictionaries.used_by", name: Variable.report&.name) : "" }, class: [toggle_class_name('mark_as_active', @variable.report?), toggle_class_name('disabled', Variable.report && Variable.report.id != @variable.id)] }
              %i.fa.fa-star-half-alt.fa-lg
              %p.status-text.m-0
                = t("dictionaries.feedback")
              %input.mark_as{ type: "radio", value: "report", name: "variable[mark_as]", checked: @variable.report?, disabled: Variable.report && Variable.report.id != @variable.id }

            %label.item.text-center{ data: { toggle: "tooltip", title: (Variable.location && Variable.location.id != @variable.id) ? t("dictionaries.used_by", name: Variable.location&.name) : "" }, class: [toggle_class_name('mark_as_active', @variable.location?), toggle_class_name('disabled', Variable.location && Variable.location.id != @variable.id)] }
              %i.fa.fa-map-marker-alt.fa-lg
              %p.status-text.m-0
                = t("dictionaries.site_location")
              %input.mark_as{ type: "radio", value: "location", name: "variable[mark_as]", checked: @variable.location?, disabled: Variable.location && Variable.location.id != @variable.id }

            %label.item.text-center{ data: { toggle: "tooltip", title: (Variable.ticket_tracking && Variable.ticket_tracking.id != @variable.id) ? t("dictionaries.used_by", name: Variable.ticket_tracking&.name) : "" }, class: [toggle_class_name('mark_as_active', @variable.ticket_tracking?), toggle_class_name('disabled', Variable.ticket_tracking && Variable.ticket_tracking.id != @variable.id)] }
              %i.fa.fa-ticket-alt.fa-lg
              %p.status-text.m-0
                = t("dictionaries.ticket_tracking")
              %input.mark_as{ type: "radio", value: "ticket_tracking", name: "variable[mark_as]", checked: @variable.ticket_tracking?, disabled: Variable.ticket_tracking && Variable.ticket_tracking.id != @variable.id }
              
