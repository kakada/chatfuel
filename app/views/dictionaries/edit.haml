.d-sm-flex.align-items-center.justify-content-between.mb-4
  %h1.h3.mb-0.text-gray-800= @variable.name
  = link_to "Unmark as feedback", "#", class: "btn btn-success"

.card.shadow.mb-4
  .card-body
    .my-4
      = simple_form_for @variable, url: dictionaries_path do |f|
        .table-responsive
          %table.table{:cellspacing => "0", :width => "100%"}
            %thead
              %tr
                %th Raw value
                %th Mapping value
                %th.w-25.px-4 Satisfied
                %th
            %tbody
              = f.simple_fields_for :values do |value_form|
                = render "value_form", value_form: value_form
            %tfoot
              %tr
                %td{ colspan: 4 }
                  = link_to "#", class: "text-decoration-none dictionary-add-pair" do
                    %i.fa.fa-sm.fa-plus-circle.fa-fw
                    Add pair
      
        %h6.mt-4.permission-title Permission
        %ul.list-inline
          - Role.all.each do |role|
            %li.list-inline-item
              .custom-control.custom-checkbox
                %input.custom-control-input{ id: role.id, type: "checkbox" }
                %label.custom-control-label{ for: role.id }
                  %span= role.name

        = f.submit "Update", class: "btn btn-primary float-right"
