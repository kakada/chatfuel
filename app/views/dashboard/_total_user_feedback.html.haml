.col-xl-6.col-lg-5
  .card.shadow.mb-4
    .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
      .h5.m-0.font-weight-bold.text-primary
        = t("dashboard.total_user_feedback", name: @query.report_enabled&.name)
    .card-body
      = link_to "", class: "chart-dl" do
        %i.fas.fa-camera
      %a{ id: "link" }

      #total_user_feedback.pt-4.pb-2.d-flex.justify-content-around.align-items-center
        - if @query.total_users_feedback.present?
          
          %ul.list-unstyled
            %li
              %span.oval.oval--green
              %span.oval-emoji 😍
              %span.oval-label-km
                = t("dashboard.like")
            %li
              %span.oval.oval--orange
              %span.oval-emoji 😊
              %span.oval-label-km
                = t("dashboard.acceptable")
            %li
              %span.oval.oval--yellow
              %span.oval-emoji 😞
              %span.oval-label-km
                = t("dashboard.dislike")

        = pie_chart @query.total_users_feedback, colors: %w(#1cc88a #ffbc00 #f63e3e), width: "200px", height: "200px", donut: true, legend: false, messages: { empty: t("no_data") }, library: { cutoutPercentage: 80 }