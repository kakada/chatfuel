  - c.with(:addon) do
    = render ChartAddonComponent.new(visibility:collection.blank?, path:"access-info", formater: "accessInfo", canvasid: id)
  - c.with(:body) { content_tag(:canvas, nil, id: id) }
  - c.with(:hint) { t("hint.information_access_by_period") }