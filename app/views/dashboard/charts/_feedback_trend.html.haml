= render( ChartComponent.new(name: title, filterable: true) ) do |c|
  - c.with(:addon) do
    %select.period-filter{ data: { resourcepath: "feedback-trend", formater: "feedbackTrend", canvasid: "chart_owso_feedback_trend_#{province_id}" }}
      %option{ value: "month" }= t("period.monthly")
      %option{ value: "quarter" }= t("period.quarterly")
      %option{ value: "year" }= t("period.yearly")
  - c.with(:body) { content_tag(:canvas, nil, id: "chart_owso_feedback_trend_#{province_id}", class: "chart_owso_feedback_trend", "data-provinceid": province_id) }
  - c.with(:hint) { t("hint.owso_feedback_trend") }