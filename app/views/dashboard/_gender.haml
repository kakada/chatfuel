.col-xl-4.col-lg-5
  .card.shadow.mb-4
    .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
      .h5.m-0.font-weight-bold.text-primary
        = t("dashboard.total_user_gender")

      .tools
        - if @query.users_visited_by_each_genders.present?
          = link_to "#", class: "chart-dl text-dark", "data-target": "#total_user_visit" do
            %i.fa.fa-download

        - if policy(:dashboard).setting?
          = link_to "#", class: "ml-2", data: { toggle: "modal", target: "#chooseDictionary" } do
            %i.fas.fa-cog.cog
    .card-body
      #total_user_visit.pt-4.d-flex.justify-content-around.align-items-center
        - if @query.users_visited_by_each_genders.present?
          %ul.list-unstyled
            - @query.users_visited_by_each_genders.keys.each do |key|
              %li
                %span.oval
                %span.oval-label.word-wrap-normal
                  = key

        = render 'choose_dictionary_modal', url: set_user_visit_dictionaries_path, checked_method: :user_visit?, modal_id: 'chooseDictionary'
        = pie_chart @query.users_visited_by_each_genders, width: "200px", height: "200px", legend: false, messages: { empty: t("no_data") }