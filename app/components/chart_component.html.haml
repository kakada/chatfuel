.card.shadow.mb-4{ role: "figure" }
  .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
    .h5.m-0.font-weight-bold.text-primary
      = head

    .tools
      = link_to "#", class: "chart-dl text-dark", "data-target": "##{@id}" do
        %i.fa.fa-download

  .card-body
    .pt-4.d-flex.justify-content-around.align-items-center{ id: @id }
      = body
